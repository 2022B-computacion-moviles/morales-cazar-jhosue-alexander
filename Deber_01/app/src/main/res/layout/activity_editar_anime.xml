<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarAnime">

    <Button
        android:id="@+id/btn_ActualizarAnime"
        android:layout_width="146dp"
        android:layout_height="48dp"
        android:layout_marginBottom="88dp"
        android:text="Actualizar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/input_estudioAnime"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/input_estudioAnime" />

    <TextView
        android:id="@+id/tv_EditarAnime"
        android:layout_width="319dp"
        android:layout_height="54dp"
        android:layout_marginTop="70dp"
        android:text="Editar Anime"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_Nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Nombre:"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_EditarAnime"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_EditarAnime"
        app:layout_constraintTop_toBottomOf="@+id/tv_EditarAnime" />

    <TextView
        android:id="@+id/tv_AnioLanzamiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Año de Lanzamiento:"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/input_anioAnime"
        app:layout_constraintEnd_toEndOf="@+id/input_nombreAnime"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_nombreAnime" />

    <TextView
        android:id="@+id/tv_Genero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Genero:"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/input_generoAnime"
        app:layout_constraintEnd_toEndOf="@+id/input_anioAnime"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_anioAnime" />

    <TextView
        android:id="@+id/tv_Estudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Estudio:"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/input_estudioAnime"
        app:layout_constraintEnd_toEndOf="@+id/input_generoAnime"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_generoAnime" />

    <EditText
        android:id="@+id/input_nombreAnime"
        android:layout_width="316dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Ingrese el nombre"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/tv_AnioLanzamiento"
        app:layout_constraintEnd_toEndOf="@+id/tv_Nombre"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_Nombre" />

    <EditText
        android:id="@+id/input_anioAnime"
        android:layout_width="316dp"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="Ingrese el año"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/tv_Genero"
        app:layout_constraintEnd_toEndOf="@+id/tv_AnioLanzamiento"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_AnioLanzamiento" />

    <EditText
        android:id="@+id/input_generoAnime"
        android:layout_width="316dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Ingrese el genero"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/tv_Estudio"
        app:layout_constraintEnd_toEndOf="@+id/tv_Genero"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_Genero" />

    <EditText
        android:id="@+id/input_estudioAnime"
        android:layout_width="316dp"
        android:layout_height="48dp"
        android:layout_marginBottom="64dp"
        android:ems="10"
        android:hint="Ingrese el estudio"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btn_ActualizarAnime"
        app:layout_constraintEnd_toEndOf="@+id/tv_Genero"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_Genero" />

</androidx.constraintlayout.widget.ConstraintLayout>