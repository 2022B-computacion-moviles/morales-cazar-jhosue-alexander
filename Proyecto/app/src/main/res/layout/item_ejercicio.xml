<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imagen_ejercicio"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/nombre_ejercicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imagen_ejercicio"
        android:layout_marginStart="4dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@id/imagen_ejercicio"
        android:fontFamily="@font/nunito_bold"
        android:text="Nombre Ejercicio"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/series_ejercicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombre_ejercicio"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/textView20"
        android:fontFamily="@font/nunito"
        android:text="Series Ejercicio"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/repeticiones_ejercicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/series_ejercicio"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/textView12"
        android:fontFamily="@font/nunito"
        android:text="Repeticiones Ejercicio"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/peso_ejercicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/repeticiones_ejercicio"
        android:layout_marginStart="3dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/textView21"
        android:fontFamily="@font/nunito"
        android:text="Peso Ejercicio"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombre_ejercicio"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/imagen_ejercicio"
        android:fontFamily="@font/nunito"
        android:text="Series:"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView20"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/imagen_ejercicio"
        android:fontFamily="@font/nunito"
        android:text="Repeticiones:"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView12"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/imagen_ejercicio"
        android:fontFamily="@font/nunito"
        android:text="Peso:"
        android:textColor="@color/white" />

</RelativeLayout>